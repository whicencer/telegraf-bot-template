{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"],
    },
  },
  "include": [
    "src/**/*",
    "webpack.config.ts"
  ]
}